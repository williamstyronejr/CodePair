{
  "name": "codepair-launcher",
  "version": "1.0.0",
  "description": "Server used to launcher code runners.",
  "main": "index.js",
  "engines": {
    "node": "16",
    "npm": "7"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --ignore '/temp/' src/index.js",
    "production": "NODE_ENV=production pm2 start src/index.js -2",
    "precommmit": "lint-staged",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.8.0",
    "dockerode": "^3.3.1",
    "dotenv": "^16.0.0",
    "vm2": "^3.9.8",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix ./src"
    ]
  }
}
