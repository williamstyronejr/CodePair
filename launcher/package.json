{
  "name": "codepair-launcher",
  "version": "1.0.0",
  "description": "Server used to launcher code runners.",
  "main": "index.js",
  "engines": {
    "node": "^18.0.0",
    "npm": "^8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --ignore '/temp/' src/index.js",
    "production": "NODE_ENV=production pm2 start src/index.js -2",
    "precommmit": "lint-staged",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.3",
    "dockerode": "^3.3.5",
    "dotenv": "^16.0.3",
    "vm2": "^3.9.16",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.2.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.22"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix ./src"
    ]
  }
